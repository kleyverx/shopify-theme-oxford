{% comment %} Estilos de variantes y animaciones centralizados en assets/product-section.css {% endcomment %}

<script>
  // Inicializar datos del producto para JavaScript
  window.product = {
    id: {{ product.id }},
    title: {{ product.title | json }},
    handle: {{ product.handle | json }},
    price: {{ product.price }},
    compare_at_price: {{ product.compare_at_price | default: 'null' }},
    available: {{ product.available | json }},
    variants: [
      {% for variant in product.variants %}
        {
          id: {{ variant.id }},
          title: {{ variant.title | json }},
          price: {{ variant.price }},
