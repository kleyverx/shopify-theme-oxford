{% comment %}
  Oxford Theme - Product Gallery Section
  Autor: Kleyver Urbina - kleyvercell2@gmail.com
  Versi√≥n mejorada: Minimalista y moderna
  Fecha: Enero 2025
{% endcomment %}

{{ 'product-section.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-section.js' | asset_url }}" defer></script>

<section class="product-gallery-section" 
         data-bg-color="{{ section.settings.background_color }}"
         data-padding-top="{{ section.settings.padding_top }}"
         data-padding-bottom="{{ section.settings.padding_bottom }}"
         data-enable-zoom="{{ section.settings.enable_zoom }}"
         data-primary-color="{{ section.settings.primary_color | default: '#000000' }}"
         data-secondary-color="{{ section.settings.secondary_color | default: '#666666' }}"
         data-accent-color="{{ section.settings.accent_color | default: '#007bff' }}"
         data-border-color="{{ section.settings.border_color | default: '#e5e5e5' }}"
         data-border-radius="{{ section.settings.border_radius | default: 8 }}"
         data-spacing-sm="0.5rem"
         data-spacing-md="1rem"
         data-spacing-lg="2rem"
         data-container-max-width="{{ section.settings.max_width | default: 1200 }}"
         data-columns-gap="{{ section.settings.columns_gap | default: 60 }}"
         data-image-ratio="{{ section.settings.image_ratio | default: '1/1' }}"
         data-image-shadow="{{ section.settings.image_shadow }}"
         data-image-fit="{{ section.settings.image_fit | default: 'cover' }}"
         data-title-size="{{ section.settings.title_size | default: 2 }}"
         data-title-weight="{{ section.settings.title_weight | default: 700 }}">
  
  <div class="container">
    
    <!-- Breadcrumb -->
    {% if section.settings.show_breadcrumb %}
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="{{ routes.root_url }}" class="breadcrumb-link">
              {{ 'general.breadcrumbs.home' | t | default: 'Inicio' }}
            </a>
          </li>
          
          {% if collection %}
            <li class="breadcrumb-item">
              <span class="breadcrumb-separator" aria-hidden="true">/</span>
              <a href="{{ collection.url }}" class="breadcrumb-link">
                {{ collection.title }}
              </a>
            </li>
          {% elsif product.collections.size > 0 %}
            <li class="breadcrumb-item">
              <span class="breadcrumb-separator" aria-hidden="true">/</span>
              <a href="{{ product.collections.first.url }}" class="breadcrumb-link">
                {{ product.collections.first.title }}
              </a>
            </li>
          {% endif %}
          
          <li class="breadcrumb-item">
            <span class="breadcrumb-separator" aria-hidden="true">/</span>
            <span class="breadcrumb-current" aria-current="page">
              {{ product.title }}
            </span>
          </li>
        </ol>
      </nav>
    {% endif %}
    
    <div class="product-wrapper">
      
      <!-- Galer√≠a de im√°genes -->
      <div class="gallery-column">
        {% assign main_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media %}
        <!-- Imagen principal basada en product.media / featured_media -->
        {% if main_media %}
          <img id="mainImage"
               class="main-image"
               src="{{ main_media | image_url: width: 800 }}"
               alt="{{ main_media.alt | default: product.title | escape }}"
               loading="eager"
               width="800"
               height="800"
               srcset="{{ main_media | image_url: width: 400 }} 400w,
                       {{ main_media | image_url: width: 600 }} 600w,
                       {{ main_media | image_url: width: 800 }} 800w,
                       {{ main_media | image_url: width: 1200 }} 1200w"
               sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 800px">
          <span class="zoom-indicator" aria-hidden="true">üîç</span>
        {% endif %}
        
        <!-- Miniaturas usando product.media -->
        {% if product.media.size > 1 %}
          <div class="thumbnails-carousel" data-thumbnails-carousel>
            <button type="button" class="nav-btn nav-prev" aria-label="Anterior" data-thumbnails-prev>‚Äπ</button>
            <div class="thumbnails-track product-thumbnails-grid" data-thumbnails-track>
              {% for media in product.media %}
                {% if media.media_type == 'image' %}
                  <div class="product-thumbnail-item {% if main_media and media.id == main_media.id %}active{% endif %}"
                       data-media-id="{{ media.id }}"
                       data-image-src="{{ media | image_url: width: 800 }}">
                    <img src="{{ media | image_url: width: 200 }}"
                         alt="{{ media.alt | default: product.title | escape }}"
                         loading="lazy"
                         width="200"
                         height="200"
                         srcset="{{ media | image_url: width: 200 }} 200w, {{ media | image_url: width: 300 }} 300w"
                         sizes="(max-width: 768px) 150px, 200px">
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <button type="button" class="nav-btn nav-next" aria-label="Siguiente" data-thumbnails-next>‚Ä∫</button>
          </div>
        {% endif %}
      </div>
      
      <!-- Contenido del producto -->
      <div class="content-column">
        <div class="product-info">
          
          {% if section.settings.show_vendor and product.vendor != blank %}
            <div class="product-vendor">{{ product.vendor }}</div>
          {% endif %}
          
          <h1 class="product-title">
            {{ section.settings.custom_title | default: product.title }}
          </h1>
          
          {% if section.settings.custom_subtitle != blank %}
            <p class="product-subtitle">{{ section.settings.custom_subtitle }}</p>
          {% endif %}
          
          {% if section.settings.show_price %}
            <div class="product-price" data-product-price>
              {% if product.compare_at_price > product.price %}
                <span class="price-sale" data-sale-price>{{ product.price | money }}</span>
                <span class="price-compare" data-compare-price>{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="price-regular" data-regular-price>{{ product.price | money }}</span>
              {% endif %}
            </div>
          {% endif %}
          
          {% if section.settings.show_description and product.description != blank %}
            <div class="product-description">
              {{ section.settings.custom_description | default: product.description }}
            </div>
          {% endif %}

          <!-- Selector de Variantes en Contenido -->
          {% unless product.has_only_default_variant %}
            <div class="product-variants-content" data-product-variants-content>
              {% for option in product.options %}
                {% assign option_index = forloop.index0 %}
                <div class="variant-option-content">
                  <label class="variant-label-content" for="variant-select-{{ forloop.index }}">{{ option }}:</label>
                  <select class="variant-select" 
                          id="variant-select-{{ forloop.index }}" 
                          name="option{{ forloop.index }}" 
                          data-option-name="{{ option }}" 
                          data-option-position="{{ forloop.index }}"
                          data-variant-select
                          data-option-selector>
                    {% assign option_values = '' %}
                    {% for variant in product.variants %}
                      {% assign current_option_value = variant.options[option_index] %}
                      {% unless option_values contains current_option_value %}
                        {% assign option_values = option_values | append: current_option_value | append: ',' %}
                        <option value="{{ current_option_value }}" 
                                {% if current_option_value == product.selected_or_first_available_variant.options[option_index] %}selected{% endif %}>
                          {{ current_option_value }}
                        </option>
                      {% endunless %}
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
              
              <!-- Informaci√≥n de Variante Actual -->
              <div class="current-variant-display" data-current-variant-display-content>
                <span class="variant-info-label">Variaci√≥n seleccionada:</span>
                <span class="variant-info-value" data-current-variant-name>
                  {{ product.selected_or_first_available_variant.title | default: 'Variante por defecto' }}
                </span>
              </div>
            </div>
          {% endunless %}
          
          <!-- Bloques personalizados -->
          {% for block in section.blocks %}
            <div class="custom-block" {{ block.shopify_attributes }}>
              {% case block.type %}
                {% when 'whatsapp' %}
                  {% assign phone_number = block.settings.phone_number | remove: '+' | remove: ' ' | remove: '-' %}
                  {% assign whatsapp_message = block.settings.whatsapp_message | url_encode %}
                  
                  <div class="whatsapp-button"
                       data-bubble-bg="{{ block.settings.bubble_bg_color }}"
                       data-button-bg="{{ block.settings.button_bg_color }}"
                       data-button-hover="{{ block.settings.button_hover_color }}">
                    <div class="whatsapp-message">
                      {{ block.settings.message_text }}
                      <div class="boton-linea">
                        <a href="https://api.whatsapp.com/send/?phone={{ phone_number }}&text={{ whatsapp_message }}" 
                           class="whatsapp-action-btn" 
                           target="_blank" 
                           rel="noopener" 
                           aria-label="{{ block.settings.button_text }}">
                          {{ block.settings.button_text }}
                        </a>
                      </div>
                    </div>
                    <button class="whatsapp-icon" 
                            aria-label="Chatea por WhatsApp" 
                            data-whatsapp-url="https://api.whatsapp.com/send/?phone={{ phone_number }}&text={{ whatsapp_message }}" 
                            type="button">
