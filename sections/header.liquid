{% assign link_hover_effect = section.settings.link_hover_effect | default: 'underline' %}
{% assign animation_style = section.settings.animation_style | default: 'fade' %}
{% assign header_style = section.settings.header_style | default: 'minimal' %}

<header class="header header--{{ section.settings.logo_position | default: 'left' }} header--{{ header_style }} header--hover-{{ section.settings.hover_effect | default: 'underline' }}" role="banner">
  <div class="header__container">
    <!-- Mobile Menu Button -->
    <button class="header__burger" 
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-label="{{ 'header.menu_open' | t }}">
      <span class="header__burger-lines">
        <span class="header__burger-line"></span>
        <span class="header__burger-line"></span>
        <span class="header__burger-line"></span>
      </span>
    </button>

    <!-- Logo -->
    <div class="header__logo-wrapper">
      {% if settings.logo_image != blank %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {{ settings.logo_image | image_url: width: 200 | image_tag:
            class: 'header__logo',
            widths: '50, 100, 150, 200, 250, 300',
            sizes: '(max-width: 768px) 120px, 160px',
            alt: shop.name,
            preload: true
          }}
        </a>
      {% elsif section.settings.logo != blank %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {{ section.settings.logo | image_url: width: 200 | image_tag:
            class: 'header__logo',
            widths: '50, 100, 150, 200, 250, 300',
            sizes: '(max-width: 768px) 120px, 160px',
            alt: shop.name,
            preload: true
          }}
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="header__logo-text">{{ shop.name }}</a>
      {% endif %}
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__nav" role="navigation" aria-label="{{ 'header.navigation' | t }}">
      {% for link in section.settings.menu.links %}
        {% if link.links.size > 0 %}
          <div class="header__nav-item header__nav-item--dropdown">
            <button class="header__nav-link header__nav-link--dropdown" 
                    aria-haspopup="true" 
                    aria-expanded="false"
                    data-dropdown-trigger>
              {{ link.title }}
              <svg class="header__dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none" style="color: var(--nav-link-color, currentColor);">
                <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="var(--icon-stroke-width, 1.5)" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <div class="header__dropdown" role="menu">
              <div class="header__dropdown-content">
                {% for sublink in link.links %}
                  <a href="{{ sublink.url }}" class="header__dropdown-link" role="menuitem">
                    {{ sublink.title }}
                  </a>
                {% endfor %}
              </div>
            </div>
          </div>
        {% else %}
          <a href="{{ link.url }}" 
             class="header__nav-link{% if link.current %} header__nav-link--active{% endif %}">
            {{ link.title }}
          </a>
        {% endif %}
      {% endfor %}
    </nav>

    <!-- Search Icons -->
    <div class="header__actions">
      {% if section.settings.show_search %}
        <button class="header__action-btn" aria-label="{{ 'header.search' | t }}">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" style="color: var(--nav-link-color, currentColor);">
            <path d="M17.5 17.5L13.875 13.875M15.8333 9.16667C15.8333 12.8486 12.8486 15.8333 9.16667 15.8333C5.48477 15.8333 2.5 12.8486 2.5 9.16667C2.5 5.48477 5.48477 2.5 9.16667 2.5C12.8486 2.5 15.8333 5.48477 15.8333 9.16667Z" stroke="currentColor" stroke-width="var(--icon-stroke-width, 1.5)" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {% endif %}
      
      <!-- Mini Cart -->
      {% if section.settings.show_cart %}
        {% render 'mini-cart' %}
      {% endif %}

    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="header__mobile-nav" aria-hidden="true">
    <div class="header__mobile-overlay"></div>
    <div class="header__mobile-content">
      <div class="header__mobile-header">
        <div class="header__mobile-title">{{ section.settings.mobile_menu_title | default: 'Menu' }}</div>
        <button class="header__mobile-close" type="button" aria-label="{{ 'header.close_menu' | t }}">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" style="color: var(--nav-link-color, currentColor);">
            <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="var(--icon-stroke-width, 2)" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      
      <nav class="header__mobile-nav-menu" role="navigation">
        {% for link in section.settings.menu.links %}
          {% if link.links.size > 0 %}
            <div class="header__mobile-nav-item header__mobile-nav-item--dropdown">
              <button class="header__mobile-nav-link header__mobile-nav-link--dropdown" 
                      aria-expanded="false"
                      data-mobile-dropdown>
                {{ link.title }}
                <svg class="header__mobile-dropdown-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" style="color: var(--nav-link-color, currentColor);">
                  <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="var(--icon-stroke-width, 1.5)" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
              <div class="header__mobile-dropdown">
                {% for sublink in link.links %}
                  <a href="{{ sublink.url }}" class="header__mobile-dropdown-link">
                    {{ sublink.title }}
                  </a>
                {% endfor %}
              </div>
            </div>
          {% else %}
            <a href="{{ link.url }}" 
               class="header__mobile-nav-link{% if link.current %} header__mobile-nav-link--active{% endif %}">
              {{ link.title }}
            </a>
          {% endif %}
        {% endfor %}
      </nav>
    </div>
  </div>
</header>

{% stylesheet %}
/* CSS Variables */
:root {
  --header-height: 72px;
  --header-height-mobile: 64px;
  --header-bg: #ffffff;
  --header-color: #1a1a1a;
  --header-border: rgba(0, 0, 0, 0.08);
  --header-shadow: 0 1px 3px rgba(0, 0, 0, 0.05);
  --header-backdrop: rgba(255, 255, 255, 0.95);
  
  --nav-link-color: #4a4a4a;
  --nav-link-hover: #000000;
  --nav-link-active: #000000;
  
  --dropdown-bg: #ffffff;
  --dropdown-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
  --dropdown-border: rgba(0, 0, 0, 0.06);
  
  --mobile-overlay: rgba(0, 0, 0, 0.4);
  --mobile-nav-bg: #ffffff;
  
  --transition-fast: 0.15s ease;
  --transition-normal: 0.25s ease;
  --transition-slow: 0.35s ease;
  
  --border-radius: 8px;
  --border-radius-small: 6px;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  
  --spacing-xs: 0.5rem;
  --spacing-sm: 0.75rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  
  /* Hover effect variables */
  --underline-height: 2px;
  --underline-offset: 4px;
  --hover-scale: 1.05;
  --hover-bg-opacity: 0.04;
}

/* Header Base */
.header {
  position: sticky;
  top: 0;
  z-index: 999;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
  background: var(--header-backdrop);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--header-border);
  transition: all var(--transition-normal);
}

.header--minimal {
  box-shadow: none;
  border-bottom: 1px solid var(--header-border);
}

.header--elevated {
  box-shadow: var(--header-shadow);
  border-bottom: none;
}

.header__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
  height: var(--header-height);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-lg);
}

/* Logo */
.header__logo-wrapper {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  z-index: 2;
}

.header--center .header__logo-wrapper {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.header__logo-link {
  display: block;
  line-height: 0;
  transition: opacity var(--transition-fast);
}

.header__logo-link:hover {
  opacity: 0.8;
}

.header__logo {
  height: auto;
  max-height: var(--logo-height, 40px);
  width: auto;
  max-width: 200px;
  object-fit: contain;
}

.header__logo-text {
  font-size: 1.5rem;
  font-weight: var(--font-weight-semibold);
  color: var(--header-color);
  text-decoration: none;
  letter-spacing: -0.02em;
  transition: color var(--transition-fast);
}

.header__logo-text:hover {
  color: var(--nav-link-hover);
}

/* Desktop Navigation with Hover Effects */
.header__nav {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  flex: 1;
  justify-content: center;
}

.header--left .header__nav {
  justify-content: flex-start;
  margin-left: var(--spacing-xl);
}

.header--center .header__nav {
  justify-content: center;
}

.header__nav-item {
  position: relative;
}

.header__nav-link {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--nav-link-color);
  text-decoration: none;
  font-size: 0.95rem;
  font-weight: var(--font-weight-medium);
  letter-spacing: -0.01em;
  border-radius: var(--border-radius-small);
  transition: all var(--transition-fast);
  position: relative;
  background: none;
  border: none;
  cursor: pointer;
  white-space: nowrap;
}

/* Hover Effect: Underline */
.header--hover-underline .header__nav-link::after {
  content: '';
  position: absolute;
  left: var(--spacing-md);
  right: var(--spacing-md);
  bottom: calc(var(--spacing-sm) - var(--underline-offset));
  height: var(--underline-height);
  background: var(--nav-link-hover);
  opacity: 0;
  transform: scaleX(0);
  transform-origin: center;
  transition: all var(--transition-normal);
  border-radius: 1px;
}

.header--hover-underline .header__nav-link:hover::after,
.header--hover-underline .header__nav-link:focus::after,
.header--hover-underline .header__nav-link--active::after {
  opacity: 1;
  transform: scaleX(1);
}

.header--hover-underline .header__nav-link:hover,
.header--hover-underline .header__nav-link:focus {
  color: var(--nav-link-hover);
}

/* Hover Effect: Background */
.header--hover-background .header__nav-link:hover,
.header--hover-background .header__nav-link:focus {
  color: var(--nav-link-hover);
  background: rgba(0, 0, 0, var(--hover-bg-opacity));
}

/* Hover Effect: Scale */
.header--hover-scale .header__nav-link {
  transition: all var(--transition-fast), transform var(--transition-normal);
}

.header--hover-scale .header__nav-link:hover,
.header--hover-scale .header__nav-link:focus {
  color: var(--nav-link-hover);
  transform: scale(var(--hover-scale));
}

/* Hover Effect: Slide */
.header--hover-slide .header__nav-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, var(--hover-bg-opacity));
  border-radius: var(--border-radius-small);
  opacity: 0;
  transform: translateY(100%);
  transition: all var(--transition-normal);
  z-index: -1;
}

.header--hover-slide .header__nav-link:hover::before,
.header--hover-slide .header__nav-link:focus::before {
  opacity: 1;
  transform: translateY(0);
}

.header--hover-slide .header__nav-link:hover,
.header--hover-slide .header__nav-link:focus {
  color: var(--nav-link-hover);
}

/* Hover Effect: Glow */
.header--hover-glow .header__nav-link {
  transition: all var(--transition-normal);
}

.header--hover-glow .header__nav-link:hover,
.header--hover-glow .header__nav-link:focus {
  color: var(--nav-link-hover);
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.8);
}

/* Hover Effect: Border */
.header--hover-border .header__nav-link {
  border: 2px solid transparent;
  transition: all var(--transition-normal);
}

.header--hover-border .header__nav-link:hover,
.header--hover-border .header__nav-link:focus {
  color: var(--nav-link-hover);
  border-color: var(--nav-link-hover);
}

/* Active states for all hover effects */
.header__nav-link--active {
  color: var(--nav-link-active);
  font-weight: var(--font-weight-semibold);
}

/* Dropdown */
.header__dropdown {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  min-width: 200px;
  background: var(--dropdown-bg);
  border: 1px solid var(--dropdown-border);
  border-radius: var(--border-radius);
  box-shadow: var(--dropdown-shadow);
  opacity: 0;
  visibility: hidden;
  transform: translateY(-8px);
  transition: all var(--transition-normal);
  z-index: 100;
}

.header__nav-item--dropdown:hover .header__dropdown,
.header__nav-item--dropdown:focus-within .header__dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.header__dropdown-content {
  padding: var(--spacing-sm);
}

.header__dropdown-link {
  display: block;
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--nav-link-color);
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: var(--font-weight-normal);
  border-radius: var(--border-radius-small);
  transition: all var(--transition-fast);
}

.header__dropdown-link:hover,
.header__dropdown-link:focus {
  color: var(--nav-link-hover);
  background: rgba(0, 0, 0, 0.04);
}

/* Actions */
.header__actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  flex: 0 0 auto;
}

.header__action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  color: var(--nav-link-color);
  background: none;
  border: none;
  border-radius: var(--border-radius-small);
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
}

.header__action-btn:hover,
.header__action-btn:focus {
  color: var(--nav-link-hover);
  background: rgba(0, 0, 0, 0.04);
}




/* Mobile Menu Button */
.header__burger {
  display: none;
  width: 44px;
  height: 44px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  align-items: center;
  justify-content: center;
  border-radius: var(--border-radius-small);
  transition: background var(--transition-fast);
}

.header__burger:hover {
  background: rgba(0, 0, 0, 0.04);
}

.header__burger-lines {
  display: flex;
  flex-direction: column;
  gap: 4px;
  width: 20px;
}

.header__burger-line {
  height: 2px;
  background: var(--header-color);
  border-radius: 1px;
  transition: all var(--transition-normal);
  transform-origin: center;
}

.header__burger[aria-expanded="true"] .header__burger-line:nth-child(1) {
  transform: rotate(45deg) translate(3px, 3px);
}

.header__burger[aria-expanded="true"] .header__burger-line:nth-child(2) {
  opacity: 0;
}

.header__burger[aria-expanded="true"] .header__burger-line:nth-child(3) {
  transform: rotate(-45deg) translate(3px, -3px);
}

/* Mobile Navigation */
.header__mobile-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  height: 100dvh; /* Para mejor soporte en móviles */
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-normal);
}

.header__mobile-nav[aria-hidden="false"] {
  opacity: 1;
  visibility: visible;
}

.header__mobile-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--mobile-overlay);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  touch-action: none; /* Previene scroll en el fondo */
}

.header__mobile-content {
  position: absolute;
  top: 0;
  right: 0;
  width: min(400px, 85vw);
  height: 100%;
  background: var(--mobile-nav-bg);
  transform: translateX(100%);
  transition: transform var(--transition-normal);
  display: flex;
  flex-direction: column;
  box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
}

.header__mobile-nav[aria-hidden="false"] .header__mobile-content {
  transform: translateX(0);
}

.header__mobile-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg) var(--spacing-xl);
  border-bottom: 1px solid var(--header-border);
  flex: 0 0 auto;
}

.header__mobile-title {
  font-size: 1.125rem;
  font-weight: var(--font-weight-semibold);
  color: var(--header-color);
}

.header__mobile-close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: none;
  border: none;
  cursor: pointer;
  border-radius: var(--border-radius-small);
  color: var(--nav-link-color);
  transition: all var(--transition-fast);
}

.header__mobile-close:hover {
  background: rgba(0, 0, 0, 0.04);
  color: var(--nav-link-hover);
}

.header__mobile-nav-menu {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg) 0;
}

.header__mobile-nav-link {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md) var(--spacing-xl);
  color: var(--nav-link-color);
  text-decoration: none;
  font-size: 1rem;
  font-weight: var(--font-weight-medium);
  border: none;
  background: none;
  width: 100%;
  text-align: left;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.header__mobile-nav-link:hover,
.header__mobile-nav-link:focus,
.header__mobile-nav-link--active {
  color: var(--nav-link-hover);
  background: rgba(0, 0, 0, 0.04);
}

.header__mobile-dropdown-icon {
  transition: transform var(--transition-fast);
  opacity: 0.6;
}

.header__mobile-nav-link--dropdown[aria-expanded="true"] .header__mobile-dropdown-icon {
  transform: rotate(180deg);
}

.header__mobile-dropdown {
  max-height: 0;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.02);
  transition: max-height var(--transition-normal);
}

.header__mobile-nav-item--dropdown.open .header__mobile-dropdown {
  max-height: 400px;
}

.header__mobile-dropdown-link {
  display: block;
  padding: var(--spacing-sm) var(--spacing-xl);
  padding-left: calc(var(--spacing-xl) + var(--spacing-lg));
  color: var(--nav-link-color);
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: var(--font-weight-normal);
  transition: all var(--transition-fast);
}

.header__mobile-dropdown-link:hover,
.header__mobile-dropdown-link:focus {
  color: var(--nav-link-hover);
  background: rgba(0, 0, 0, 0.04);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .header__container {
    padding: 0 var(--spacing-lg);
  }
  
  .header__nav {
    gap: var(--spacing-md);
  }
  
  .header__nav-link {
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: 0.9rem;
  }
}

@media (max-width: 768px) {
  :root {
    --header-height: var(--header-height-mobile);
  }
  
  .header__container {
    padding: 0 var(--spacing-md);
    gap: var(--spacing-md);
  }
  
  .header__burger {
    display: flex;
    order: -1;
  }
  
  .header__nav {
    display: none;
  }
  
  .header__logo {
    max-height: var(--logo-height-mobile, 32px);
  }
  
  .header__actions {
    gap: var(--spacing-xs);
  }
  
  .header--center .header__logo-wrapper {
    position: static;
    transform: none;
  }
}

/* Accessibility & Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  * {
    transition: none !important;
    animation: none !important;
  }
}

@media (prefers-color-scheme: dark) {
  :root {
    --header-bg: #1a1a1a;
    --header-color: #ffffff;
    --header-border: rgba(255, 255, 255, 0.1);
    --header-backdrop: rgba(26, 26, 26, 0.95);
    --nav-link-color: #e5e5e5;
    --nav-link-hover: #ffffff;
    --dropdown-bg: #2a2a2a;
    --dropdown-border: rgba(255, 255, 255, 0.1);
    --mobile-nav-bg: #1a1a1a;
  }
}

/* Focus Styles */
.header__nav-link:focus-visible,
.header__action-btn:focus-visible,
.header__burger:focus-visible,
.header__mobile-close:focus-visible {
  outline: 2px solid var(--nav-link-active);
  outline-offset: 2px;
}

body:has(.header__mobile-nav[aria-hidden="false"]) {
  overflow: hidden;
  position: fixed;
  width: 100%;
}
