{% assign link_hover_effect = section.settings.link_hover_effect | default: 'underline' %}
{% assign animation_style = section.settings.animation_style | default: 'fade' %}
<header class="header header--{{ section.settings.logo_position | default: 'center' }} header--effect-{{ link_hover_effect }} header--animation-{{ animation_style }}" role="banner">
  <div class="header__container">
    <button class="header__burger" 
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-label="{{ 'header.menu_open' | t }}">
      <span class="header__burger-bar"></span>
      <span class="header__burger-bar"></span>
      <span class="header__burger-bar"></span>
    </button>

    <nav class="header__nav header__nav--left" role="navigation">
      {% assign left_links = section.settings.menu.links | slice: 0, 5 %}
      {% for link in left_links %}
        <a href="{{ link.url }}" class="header__nav-link{% if link.current %} header__nav-link--active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <div class="header__logo-wrapper">
      {% if settings.logo_image != blank %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {{ settings.logo_image | image_url: width: 160 | image_tag:
              class: 'header__logo',
              widths: '50, 100, 150, 200, 250, 300',
              sizes: '(max-width: 749px) 50vw, 160px',
              alt: shop.name,
              preload: true
          }}
        </a>
      {% elsif section.settings.logo != blank %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {{ section.settings.logo | image_url: width: 160 | image_tag:
              class: 'header__logo',
              widths: '50, 100, 150, 200, 250, 300',
              sizes: '(max-width: 749px) 50vw, 160px',
              alt: shop.name,
              preload: true
          }}
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="header__logo-text">{{ shop.name }}</a>
      {% endif %}
    </div>

    <nav class="header__nav header__nav--right" role="navigation">
      {% assign right_links = section.settings.menu.links | slice: 5, 5 %}
      {% for link in right_links %}
        <a href="{{ link.url }}" class="header__nav-link{% if link.current %} header__nav-link--active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>
    
    <div id="mobile-menu" class="header__mobile-nav" aria-hidden="true">
      <div class="header__mobile-nav-header">
        <div class="header__mobile-title">{{ section.settings.mobile_menu_title | default: shop.name }}</div>
      </div>
      <nav class="header__mobile-nav-menu" role="navigation">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="header__mobile-nav-link{% if link.current %} header__mobile-nav-link--active{% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>
    </div>
  </div>
</header>

{% stylesheet %}
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
  background: var(--header-bg, var(--color-bg, #ffffff));
  color: var(--header-color, var(--color-text, #000000));
  border-bottom: 1px solid rgba(var(--color-border), 0.08);
  transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
}

.header--hidden {
  transform: translateY(-100%);
  box-shadow: none;
}

.header:not(.header--hidden) {
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.05);
}

.header__container {
  max-width: var(--page-width, 1200px);
  margin: 0 auto;
  padding: 0 var(--space-4, 2rem);
  height: var(--header-height, 5rem);
  display: flex;
  align-items: center;
  gap: var(--space-4, 2rem);
  position: relative;
}

.header__nav {
  display: flex;
  gap: var(--nav-gap, 2rem);
  flex: 1;
  align-items: center;
}

.header__nav--left {
  justify-content: flex-end;
}

.header__nav--right {
  justify-content: flex-start;
}

.header__nav-link {
  position: relative;
  color: inherit;
  text-decoration: none;
  padding: 0.5rem;
  font-size: var(--font-size-base, 1rem);
  font-weight: var(--font-weight-medium, 500);
  letter-spacing: 0.02em;
  white-space: nowrap;
  transition: color 0.3s ease;
  display: inline-block;
}

/* Efecto underline simple */
.header__nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0.5rem;
  right: 0.5rem;
  height: 2px;
  background: var(--hover-color, currentColor);
  opacity: 0;
  transform: scaleX(0);
  transform-origin: center;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.header__nav-link:hover::after,
.header__nav-link:focus::after,
.header__nav-link--active::after {
  opacity: 1;
  transform: scaleX(1);
}

.header__logo-wrapper {
  flex: 0 1 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1rem;
}

.header__logo {
  display: block;
  width: auto;
  height: var(--logo-height, 3rem);
  max-width: 100%;
  object-fit: contain;
  /* ANIMACIONES DEL LOGO REMOVIDAS */
}

.header__logo-text {
  color: inherit;
  text-decoration: none;
  font-size: var(--font-size-xl, 1.5rem);
  font-weight: var(--font-weight-bold, 700);
  letter-spacing: -0.02em;
  line-height: 1;
}

.header__burger {
  display: none;
}

.header__mobile-nav {
  display: none;
}

@media screen and (max-width: 989px) {
  .header {
    position: sticky;
    top: 0;
  }

  .header__container {
    height: var(--header-height-mobile, 4rem);
    padding: 0 var(--space-3, 1rem);
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
  }

  .header__nav {
    display: none;
  }
  
  .header__logo-wrapper {
    grid-column: 2;
    justify-self: center;
    margin: 0 auto;
    max-width: 60%;
  }

  .header__burger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 8px;
    margin-left: -8px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 101;
    position: relative;
    grid-column: 1;
    color: var(--header-color, currentColor);
    transition: color 0.3s ease;
  }
  
  .header__burger[aria-expanded="true"] {
    color: var(--mobile-menu-color, var(--header-color, currentColor));
  }

  .header__burger-bar {
    width: 24px;
    height: 2px;
    background: currentColor;
    border-radius: 2px;
    transition: transform 0.25s ease-in-out, opacity 0.15s ease;
    position: absolute;
    left: 8px;
    right: 8px;
  }

  .header__burger-bar:nth-child(1) {
    top: 14px;
    transform-origin: left center;
  }

  .header__burger-bar:nth-child(2) {
    top: 19px;
    transform-origin: center;
  }

  .header__burger-bar:nth-child(3) {
    top: 24px;
    transform-origin: left center;
  }

  .header__burger[aria-expanded="true"] .header__burger-bar:nth-child(1) {
    transform: translateY(4px) rotate(45deg);
    width: 20px;
  }

  .header__burger[aria-expanded="true"] .header__burger-bar:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .header__burger[aria-expanded="true"] .header__burger-bar:nth-child(3) {
    transform: translateY(-4px) rotate(-45deg);
    width: 20px;
  }

  .header__mobile-nav {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    background: var(--mobile-menu-bg, var(--header-bg, var(--color-bg, #ffffff)));
    opacity: 0;
    visibility: hidden;
    transform: translateY(-1rem);
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
    padding: 0;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    z-index: 100;
  }

  .header__mobile-nav[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .header__mobile-nav-header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height-mobile, 4rem);
    background: var(--mobile-menu-bg, var(--header-bg, var(--color-bg, #ffffff)));
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 2rem;
    z-index: 2;
    box-shadow: 0 1px 4px rgba(0,0,0,0.05);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--mobile-menu-border-color, rgba(0, 0, 0, 0.08));
  }
  
  .header__mobile-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--mobile-menu-title-color, var(--mobile-menu-color, var(--header-color, #000000)));
  }
  
  .header__mobile-nav-menu {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: left;
    padding: 2rem;
    padding-top: 1.5rem;
  }

  .header__mobile-nav-link {
    color: var(--mobile-menu-color, inherit);
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 500;
    padding: 0.7rem 0;
    display: block;
    transition: color 0.3s ease;
    opacity: 0.9;
    position: relative;
    letter-spacing: 0.02em;
    border-bottom: 1px solid var(--mobile-menu-border-color, rgba(0, 0, 0, 0.08));
  }

  .header__mobile-nav-link:hover,
  .header__mobile-nav-link:focus,
  .header__mobile-nav-link--active {
    color: var(--hover-color, currentColor);
    opacity: 1;
  }

  .header__logo {
    height: var(--logo-height-mobile, 2rem);
    max-height: var(--logo-height-mobile, 2rem);
  }

  .header__logo-text {
    font-size: 1.125rem;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
}

@media (hover: hover) {
  .header__nav-link:hover {
    color: var(--hover-color, currentColor);
  }
}

@media (prefers-reduced-motion: reduce) {
  .header,
  .header__logo,
  .header__nav-link::after,
  .header__mobile-nav,
  .header__burger-bar {
    transition: none;
  }
}
{% endstylesheet %}

