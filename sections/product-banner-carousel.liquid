{% comment %}
  Banner de producto destacado tipo carrusel, full width, minimalista, responsivo.
  Imagen desktop (1920x600) y mobile (900x600) con proporciones mantenidas.
  Texto animado con opción de mostrar/ocultar, sin botón de llamada a la acción.
  Versión mejorada con mejor control de imágenes y texto.
{% endcomment %}

<section class="product-banner-carousel" id="banner-{{ section.id }}" style="margin-top: {{ section.settings.margin_top | default: 0 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 0 }}px;">
  <div class="banner-carousel-wrapper">
    <button class="banner-arrow banner-arrow--prev" aria-label="Anterior" style="{% if section.settings.show_arrows %}display:flex;{% else %}display:none;{% endif %}">
      <svg width="36" height="36" viewBox="0 0 36 36" fill="none"><circle cx="18" cy="18" r="17" stroke="#1a1a1a" stroke-width="2" fill="white"/><path d="M21 12l-6 6 6 6" stroke="#1a1a1a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </button>
    <div class="banner-carousel-track">
      {% for block in section.blocks %}
        <div class="banner-slide" data-index="{{ forloop.index0 }}">
          <div class="banner-img-container">
            <picture>
              {% if block.settings.image_mobile != blank %}
                <source srcset="{{ block.settings.image_mobile | image_url: width: 900 }}" media="(max-width: 767px)">
              {% endif %}
              {% if block.settings.image_desktop != blank %}
                <img src="{{ block.settings.image_desktop | image_url: width: 1920 }}" alt="{{ block.settings.alt | escape }}" class="banner-img" loading="lazy" width="1920" height="600">
              {% else %}
                <div class="banner-img-placeholder">
                  <span>Imagen 1920x600</span>
                </div>
              {% endif %}
            </picture>
          </div>
          
          {% if block.settings.show_button and block.settings.button_text != blank %}
            <div class="banner-button-container"
                 data-hide-desktop="{{ block.settings.hide_button_desktop }}"
                 data-hide-tablet="{{ block.settings.hide_button_tablet }}"
                 data-hide-mobile="{{ block.settings.hide_button_mobile }}"
                 data-desktop-x="{{ block.settings.button_desktop_x | default: 50 }}"
                 data-desktop-y="{{ block.settings.button_desktop_y | default: 70 }}"
                 data-tablet-x="{{ block.settings.button_tablet_x | default: 50 }}"
                 data-tablet-y="{{ block.settings.button_tablet_y | default: 70 }}"
                 data-mobile-x="{{ block.settings.button_mobile_x | default: 50 }}"
                 data-mobile-y="{{ block.settings.button_mobile_y | default: 80 }}">
              {% if block.settings.button_url != blank %}
                <a href="{{ block.settings.button_url }}" 
                   class="banner-button"
                   style="background-color: {{ block.settings.button_bg_color | default: '#000000' }}; color: {{ block.settings.button_text_color | default: '#ffffff' }};"
                   aria-label="{{ block.settings.button_text | escape }}">
                  {{ block.settings.button_text | escape }}
                </a>
              {% else %}
                <button class="banner-button"
                        style="background-color: {{ block.settings.button_bg_color | default: '#000000' }}; color: {{ block.settings.button_text_color | default: '#ffffff' }};"
                        aria-label="{{ block.settings.button_text | escape }}">
                  {{ block.settings.button_text | escape }}
                </button>
              {% endif %}
            </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>
    <button class="banner-arrow banner-arrow--next" aria-label="Siguiente" style="{% if section.settings.show_arrows %}display:flex;{% else %}display:none;{% endif %}">
      <svg width="36" height="36" viewBox="0 0 36 36" fill="none"><circle cx="18" cy="18" r="17" stroke="#1a1a1a" stroke-width="2" fill="white"/><path d="M15 12l6 6-6 6" stroke="#1a1a1a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </button>
    {% if section.settings.show_indicators %}
      <div class="banner-carousel-indicators">
        {% for block in section.blocks %}
          <button class="indicator" data-index="{{ forloop.index0 }}" aria-label="Ir al slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<style>
.product-banner-carousel {
  width: 100vw;
  margin-left: calc(50% - 50vw);
  position: relative;
  overflow: hidden;
  background: #f8f9fa;
}
.banner-carousel-wrapper {
  position: relative;
  width: 100%;
  max-width: 100vw;
  overflow: hidden;
}
.banner-carousel-track {
  display: flex;
  transition: transform 0.7s cubic-bezier(.77,0,.18,1);
  will-change: transform;
}
.banner-slide {
  min-width: 100vw;
  position: relative;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  overflow: hidden;
}
.banner-img-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}
.banner-img-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 1.2rem;
  font-weight: 500;
}

/* Altura fija según configuración */
@media (min-width: 768px) {
  .banner-slide {
    height: calc(100vw * 600 / 1920);
    min-height: 300px;
    max-height: {{ section.settings.height_desktop }}px;
  }
}

@media (max-width: 767px) {
  .banner-slide {
    height: {{ section.settings.height_mobile }}px !important;
    min-height: unset;
    max-height: unset;
    aspect-ratio: unset;
  }
  .banner-img {
    height: {{ section.settings.height_mobile }}px !important;
    max-height: 100%;
    aspect-ratio: unset;
  }
}





.banner-carousel-indicators {
  position: absolute;
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%);
  display: flex;
  gap: 10px;
  z-index: 10;
}
.indicator {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: rgba(255,255,255,0.6);
  border: 2px solid rgba(255,255,255,0.9);
  opacity: 0.6;
  transition: all 0.3s ease;
  cursor: pointer;
  padding: 0;
}
.indicator.active {
  opacity: 1;
  background: rgba(255,255,255,0.95);
  transform: scale(1.2);
}
.indicator:hover {
  opacity: 0.8;
  transform: scale(1.1);
}

.banner-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 20;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
  transition: all 0.3s ease;
}
.banner-arrow--prev { left: 24px; }
.banner-arrow--next { right: 24px; }
.banner-arrow:hover { 
  opacity: 1; 
  transform: translateY(-50%) scale(1.1);
}

@media (max-width: 767px) {
  .banner-arrow--prev { left: 12px; }
  .banner-arrow--next { right: 12px; }
  .banner-arrow svg {
    width: 28px;
    height: 28px;
  }
}

/* Mejoras de accesibilidad */
.banner-arrow:focus,
.indicator:focus {
  outline: 2px solid #007acc;
  outline-offset: 2px;
}

/* Smooth scrolling para mejor experiencia */
.banner-carousel-track {
  scroll-behavior: smooth;
}

/* Estilos del botón */
.banner-button-container {
  position: absolute;
  z-index: 10;
  transform: translate(-50%, -50%);
}

.banner-button {
  display: inline-block;
  padding: 12px 24px;
  border: none;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  text-align: center;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  min-width: 120px;
  position: relative;
  overflow: hidden;
}

.banner-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s ease;
}

.banner-button:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 8px 25px rgba(0,0,0,0.3);
  border-radius: 30px;
}

.banner-button:hover::before {
  left: 100%;
}

.banner-button:focus {
  outline: 2px solid #007acc;
  outline-offset: 2px;
}

@media (max-width: 767px) {
  .banner-button {
    padding: 10px 20px;
    font-size: 0.9rem;
    min-width: 100px;
  }
}
</style>

<script>
(function() {
  const sectionId = "banner-{{ section.id }}";
  const wrapper = document.querySelector(`#${sectionId} .banner-carousel-wrapper`);
  
  if (!wrapper) return;
  
  const track = wrapper.querySelector('.banner-carousel-track');
  const slides = wrapper.querySelectorAll('.banner-slide');
  const indicators = wrapper.querySelectorAll('.indicator');
  const prevBtn = wrapper.querySelector('.banner-arrow--prev');
  const nextBtn = wrapper.querySelector('.banner-arrow--next');
  
  let current = 0;
  let timer = null;
  let isTransitioning = false;
  
  const autoplay = {{ section.settings.autoplay | default: true | json }};
  const speed = {{ section.settings.autoplay_speed | default: 6000 | json }};

  function goToSlide(idx, smooth = true) {
    if (!track || isTransitioning) return;
    
    isTransitioning = true;
    current = idx;
    
    if (smooth) {
      track.style.transition = 'transform 0.7s cubic-bezier(.77,0,.18,1)';
    } else {
      track.style.transition = 'none';
    }
    
    track.style.transform = `translateX(-${idx * 100}vw)`;
    
    // Actualizar indicadores
    indicators.forEach((el, i) => {
      el.classList.toggle('active', i === idx);
      el.setAttribute('aria-pressed', i === idx ? 'true' : 'false');
    });
    
    // Resetear transición después de completar
    setTimeout(() => {
      isTransitioning = false;
    }, smooth ? 700 : 0);
  }

  function nextSlide() {
    if (slides.length <= 1) return;
    const nextIndex = (current + 1) % slides.length;
    goToSlide(nextIndex);
  }
  
  function prevSlide() {
    if (slides.length <= 1) return;
    const prevIndex = (current - 1 + slides.length) % slides.length;
    goToSlide(prevIndex);
  }

  function startAutoplay() {
    if (autoplay && slides.length > 1) {
      clearInterval(timer);
      timer = setInterval(nextSlide, speed);
    }
  }
  
  function stopAutoplay() {
    clearInterval(timer);
  }

  // Event listeners
  indicators.forEach((btn, idx) => {
    btn.addEventListener('click', () => {
      if (idx !== current) {
        goToSlide(idx);
        stopAutoplay();
        startAutoplay();
      }
    });
  });

  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    });
  }

  // Pausar autoplay al hover
  wrapper.addEventListener('mouseenter', stopAutoplay);
  wrapper.addEventListener('mouseleave', startAutoplay);

  // Soporte para teclado
  wrapper.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    } else if (e.key === 'ArrowRight') {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    }
  });

  // Función para aplicar posicionamiento personalizado de botones
  function applyButtonPositioning() {
    const buttonContainers = wrapper.querySelectorAll('.banner-button-container');
    let customCSS = '';
    
    buttonContainers.forEach((container, index) => {
      const desktopX = container.dataset.desktopX;
      const desktopY = container.dataset.desktopY;
      const tabletX = container.dataset.tabletX;
      const tabletY = container.dataset.tabletY;
      const mobileX = container.dataset.mobileX;
      const mobileY = container.dataset.mobileY;
      const hideDesktop = container.dataset.hideDesktop;
      const hideTablet = container.dataset.hideTablet;
      const hideMobile = container.dataset.hideMobile;
      
      const uniqueClass = `banner-button-container-${index}`;
      container.classList.add(uniqueClass);
      
      // Desktop styles (1200px+)
      if (desktopX && desktopY) {
        customCSS += `
          @media (min-width: 1200px) {
            .${uniqueClass} {
              left: ${desktopX}% !important;
              top: ${desktopY}% !important;
            }
          }
        `;
      }
      
      if (hideDesktop === 'true') {
        customCSS += `
          @media (min-width: 1200px) {
            .${uniqueClass} {
              display: none !important;
            }
          }
        `;
      }
      
      // Tablet styles (768px-1199px)
      if (tabletX && tabletY) {
        customCSS += `
          @media (min-width: 768px) and (max-width: 1199px) {
            .${uniqueClass} {
              left: ${tabletX}% !important;
              top: ${tabletY}% !important;
            }
          }
        `;
      }
      
      if (hideTablet === 'true') {
        customCSS += `
          @media (min-width: 768px) and (max-width: 1199px) {
            .${uniqueClass} {
              display: none !important;
            }
          }
        `;
      }
      
      // Mobile styles (up to 767px)
      if (mobileX && mobileY) {
        customCSS += `
          @media (max-width: 767px) {
            .${uniqueClass} {
              left: ${mobileX}% !important;
              top: ${mobileY}% !important;
            }
          }
        `;
      }
      
      if (hideMobile === 'true') {
        customCSS += `
          @media (max-width: 767px) {
            .${uniqueClass} {
              display: none !important;
            }
          }
        `;
      }
    });
    
    // Inyectar CSS personalizado
    if (customCSS) {
      const styleElement = document.createElement('style');
      styleElement.textContent = customCSS;
      document.head.appendChild(styleElement);
    }
  }

  // Inicializar
  if (slides.length > 1) {
    startAutoplay();
  }
  goToSlide(0, false);
  
  // Aplicar posicionamiento personalizado de botones
  applyButtonPositioning();
})();
</script>

