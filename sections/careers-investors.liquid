      "type": "range",
      "id": "border_radius",
      "label": "Redondez de bordes",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Relleno superior",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Relleno inferior",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    }
  ],
