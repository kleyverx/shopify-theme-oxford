{% assign phone_number = section.settings.phone_number | remove: '+' | remove: ' ' | remove: '-' %}
{% assign default_message = section.settings.default_message | url_encode %}
{% assign button_message = section.settings.button_message | url_encode %}

<div class="whatsapp-button-container" style="--bubble-bg: {{ section.settings.bubble_background_color }}; --button-bg: {{ section.settings.button_background_color }}; --button-hover: {{ section.settings.button_hover_color }};">
  <div class="whatsapp-button {% if section.settings.bubble_display == 'hover' %}show-on-hover{% endif %}">
    {% unless section.settings.bubble_display == 'hidden' %}
      <div class="whatsapp-message">
        {{ section.settings.bubble_text }}
        <div class="boton-linea">
          <a href="https://api.whatsapp.com/send/?phone={{ phone_number }}&text={{ default_message }}" 
             class="whatsapp-action-btn" 
             target="_blank" 
             rel="noopener" 
             aria-label="{{ section.settings.bubble_button_text }}">
            {{ section.settings.bubble_button_text }}
          </a>
        </div>
      </div>
    {% endunless %}
    
    <button class="whatsapp-icon" 
            aria-label="{{ section.settings.button_aria_label }}" 
