<style>
.whatsapp-button-container {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 999;
}

.whatsapp-button {
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0;
}

/* Estilos para el modo hover */
.whatsapp-button.show-on-hover .whatsapp-message {
  opacity: 0;
  transform: translateY(20px);
  pointer-events: none;
  transition: all 0.3s ease;
  visibility: hidden;
}

.whatsapp-button.show-on-hover:hover .whatsapp-message {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
  visibility: visible;
}

.whatsapp-icon {
  background-color: var(--button-bg, #25d366);
  color: white;
  border-radius: 50%;
  width: 60px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  transition: all 0.3s ease;
  text-decoration: none;
  border: none;
  cursor: pointer;
  outline: none;
}

.whatsapp-icon:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 12px rgba(0,0,0,0.35);
  background-color: var(--button-hover, #1db954);
}

.whatsapp-icon svg {
  width: 35px;
  height: 35px;
}

.whatsapp-message {
  background-color: var(--bubble-bg, #333);
  color: white;
  padding: 12px 18px 16px 18px;
  border-radius: 20px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  max-width: 240px;
  position: absolute;
  bottom: calc(100% + 15px);
  right: 0;
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
  border: 2px solid var(--button-bg, #25d366);
  text-align: left;
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.whatsapp-message .boton-linea {
  display: flex;
  align-items: center;
  gap: 0;
  margin-top: 6px;
}

.whatsapp-message:after {
  content: '';
  position: absolute;
  bottom: -12px;
  right: 25px;
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid var(--bubble-bg, #333);
}

.whatsapp-action-btn {
  background: var(--button-bg, #25d366);
  color: white;
  border: none;
  border-radius: 16px;
  padding: 8px 16px;
  cursor: pointer;
  font-weight: 600;
  font-size: 1em;
  transition: background 0.2s;
  text-decoration: none;
  display: inline-block;
  white-space: nowrap;
}

.whatsapp-action-btn:hover {
  background: var(--button-hover, #1db954);
}

@media (max-width: 768px) {
  .whatsapp-button-container {
    bottom: 15px;
    right: 15px;
  }
  
  .whatsapp-icon {
    width: 50px;
    height: 50px;
  }
  
  .whatsapp-icon svg {
    width: 30px;
    height: 30px;
  }
  
  .whatsapp-message {
    max-width: 180px;
    font-size: 0.93em;
  }

  .whatsapp-button.show-on-hover .whatsapp-message {
    transform: translateY(10px);
  }
}
</style>

{% schema %}
{
  "name": "Botón de WhatsApp",
  "tag": "section",
  "class": "whatsapp-section",
  "settings": [
    {
      "type": "header",
      "content": "Configuración Principal"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Número de WhatsApp",
      "default": "+584142145474",
      "info": "Incluye el código del país. Ejemplo: +584142145474"
    },
    {
      "type": "text",
      "id": "button_aria_label",
      "label": "Etiqueta de accesibilidad",
      "default": "Chatea por WhatsApp",
      "info": "Texto para lectores de pantalla"
    },
    {
      "type": "header",
      "content": "Burbuja de Mensaje"
    },
    {
      "type": "select",
      "id": "bubble_display",
      "label": "Mostrar burbuja de mensaje",
      "options": [
        {
          "value": "always",
          "label": "Siempre visible"
        },
        {
          "value": "hover",
          "label": "Mostrar al pasar el mouse"
        },
        {
          "value": "hidden",
          "label": "Ocultar"
        }
      ],
      "default": "always"
    },
    {
      "type": "text",
      "id": "bubble_text",
      "label": "Texto de la burbuja",
      "default": "Cotiza nuestros precios al mayor 🚚"
    },
    {
      "type": "text",
      "id": "bubble_button_text",
      "label": "Texto del botón de la burbuja",
      "default": "Cotizar ahora"
    },
    {
      "type": "text",
      "id": "default_message",
      "label": "Mensaje predeterminado (burbuja)",
      "default": "¡Hola! Quisiera cotizar precios al mayor para sus productos ¿Me pueden ayudar? 🚛",
      "info": "Mensaje que se enviará al hacer clic en el botón de la burbuja"
    },
    {
      "type": "text",
      "id": "button_message",
      "label": "Mensaje predeterminado (botón principal)",
      "default": "¡Hola! Quisiera información sobre sus productos",
      "info": "Mensaje que se enviará al hacer clic en el botón principal de WhatsApp"
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "bubble_background_color",
      "label": "Color de fondo de la burbuja",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Color de fondo del botón",
      "default": "#25d366"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Color del botón al pasar el mouse",
      "default": "#1db954"
    }
  ],
  "presets": [
    {
      "name": "Botón de WhatsApp",
      "category": "Contacto"
    }
  ]
}
{% endschema %}
