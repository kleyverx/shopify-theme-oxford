
{% comment %}
  Carrito mejorado con informaci√≥n detallada y funcionalidad avanzada
  Sincronizado con mini-cart para mejor experiencia de usuario
{% endcomment %}

<div class="cart-page">
  <div class="cart-header">
    <h1 class="cart-title">{{ 'cart.title' | t }}</h1>
    <p class="cart-count">{{ cart.item_count }} {% if cart.item_count == 1 %}{{ 'cart.item' | t }}{% else %}{{ 'cart.items' | t }}{% endif %}</p>
  </div>

  {% if cart.items.size > 0 %}
    <form action="{{ routes.cart_url }}" method="post" class="cart-form" id="cart-form">
      <div class="cart-items">
        {% for item in cart.items %}
          <div class="cart-item" data-key="{{ item.key }}" data-id="{{ item.id }}">
            <div class="cart-item__image">
              {% if item.image %}
                <img src="{{ item.image | image_url: width: 150 }}" alt="{{ item.image.alt | escape }}" loading="lazy">
              {% else %}
                <div class="cart-item__no-image">{{ 'cart.no_image' | t }}</div>
              {% endif %}
            </div>
            
            <div class="cart-item__details">
              <h3 class="cart-item__title">
                <a href="{{ item.url }}">{{ item.product.title }}</a>
              </h3>
              
              {% if item.variant.title != 'Default Title' %}
                <p class="cart-item__variant">{{ item.variant.title }}</p>
              {% endif %}
              
              {% if item.properties.size > 0 %}
                <div class="cart-item__properties">
                  {% for property in item.properties %}
                    {% unless property.last == blank %}
                      <p class="cart-item__property">
                        <span class="property-name">{{ property.first }}:</span>
                        <span class="property-value">{{ property.last }}</span>
                      </p>
                    {% endunless %}
                  {% endfor %}
                </div>
              {% endif %}
              
              {% if item.selling_plan_allocation %}
                <p class="cart-item__subscription">{{ item.selling_plan_allocation.selling_plan.name }}</p>
              {% endif %}
            </div>
            
            <div class="cart-item__quantity">
              <label for="quantity-{{ item.key }}" class="visually-hidden">{{ 'cart.quantity' | t }}</label>
              <div class="quantity-selector">
                <button type="button" class="quantity-btn quantity-minus" data-key="{{ item.key }}" aria-label="{{ 'cart.decrease_quantity' | t }}">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M3 8h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </button>
                <input type="number" 
                       name="updates[]" 
                       id="quantity-{{ item.key }}"
                       class="quantity-input" 
                       value="{{ item.quantity }}" 
                       min="0" 
                       data-key="{{ item.key }}"
                       aria-label="{{ 'cart.quantity' | t }}">
                <button type="button" class="quantity-btn quantity-plus" data-key="{{ item.key }}" aria-label="{{ 'cart.increase_quantity' | t }}">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 3v10M3 8h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </button>
              </div>
            </div>
            
            <div class="cart-item__pricing">
              {% if item.original_price != item.final_price %}
                <span class="cart-item__original-price">{{ item.original_price | money }}</span>
                <span class="cart-item__final-price">{{ item.final_price | money }}</span>
                {% if item.variant.compare_at_price %}
                  <span class="cart-item__save">{{ 'cart.save' | t }} {{ item.variant.compare_at_price | minus: item.final_price | money }}</span>
                {% endif %}
              {% else %}
                <span class="cart-item__price">{{ item.final_price | money }}</span>
              {% endif %}
              
              <div class="cart-item__line-price">
                <span class="cart-item__line-total">{{ item.final_line_price | money }}</span>
                {% if item.line_level_discount_allocations.size > 0 %}
                  <div class="cart-item__discounts">
                    {% for discount in item.line_level_discount_allocations %}
                      <span class="cart-item__discount">{{ discount.discount_application.title }} (-{{ discount.amount | money }})</span>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
            
            <div class="cart-item__remove">
              <button type="button" class="cart-item__remove-btn" data-key="{{ item.key }}" aria-label="{{ 'cart.remove' | t }} {{ item.product.title }}">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M15 5L5 15M5 5l10 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
      
      <div class="cart-footer">
        {% if cart.cart_level_discount_applications.size > 0 %}
          <div class="cart-discounts">
            <h3>{{ 'cart.discounts' | t }}</h3>
            {% for discount in cart.cart_level_discount_applications %}
              <div class="cart-discount">
                <span class="discount-title">{{ discount.title }}</span>
                <span class="discount-amount">-{{ discount.total_allocated_amount | money }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}
        
        <div class="cart-totals">
          <div class="cart-subtotal">
            <span class="cart-subtotal__label">{{ 'cart.subtotal' | t }}</span>
            <span class="cart-subtotal__amount">{{ cart.total_price | money }}</span>
          </div>
          
          {% if cart.total_discount > 0 %}
            <div class="cart-savings">
              <span class="cart-savings__label">{{ 'cart.total_savings' | t }}</span>
              <span class="cart-savings__amount">-{{ cart.total_discount | money }}</span>
            </div>
          {% endif %}
          
          <p class="cart-taxes-note">{{ 'cart.taxes_note' | t }}</p>
        </div>
        
        <div class="cart-actions">
          <button type="submit" name="update" class="cart-update-btn">{{ 'cart.update' | t }}</button>
          <button type="submit" name="checkout" class="cart-checkout-btn">{{ 'cart.checkout' | t }}</button>
        </div>
      </div>
    </form>
  {% else %}
    <div class="cart-empty">
      <h2>{{ 'cart.empty_title' | t }}</h2>
      <p>{{ 'cart.empty_message' | t }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="cart-continue-shopping">{{ 'cart.continue_shopping' | t }}</a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
