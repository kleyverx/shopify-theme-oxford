{% stylesheet %}
  .news-cards-section {
    width: 100%;
    padding: 0 1rem;
    background-color: var(--bg-color, #ffffff);
    box-sizing: border-box;
  }

  .news-cards-container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    width: 100%;
  }

  .news-cards-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--title-color, #333333);
    letter-spacing: -0.02em;
  }

  .news-cards-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    width: 100%;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .news-cards-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 250px));
      justify-content: center;
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .news-cards-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 280px));
      gap: 1.5rem;
      justify-content: center;
    }
  }

  .news-card {
    background: var(--card-bg, #ffffff);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #f0f0f0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .news-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    border-color: #e0e0e0;
  }

  .news-card--clickable {
    cursor: pointer;
  }

  .news-card--clickable:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
  }

  .news-card__image-wrapper {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .news-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .news-card--clickable:hover .news-card__image {
    transform: scale(1.08);
  }

  .news-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .news-card--clickable:hover .news-card__overlay {
    opacity: 1;
  }

  .news-card__icon {
    width: 3rem;
    height: 3rem;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .news-card--clickable:hover .news-card__icon {
    transform: scale(1);
  }

  .news-card__icon svg {
    width: 1.5rem;
    height: 1.5rem;
    stroke: #333333;
  }

  .news-card__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #cbd5e0;
    font-size: 0.875rem;
    gap: 0.5rem;
  }

  .news-card__placeholder svg {
    width: 3rem;
    height: 3rem;
    stroke: #cbd5e0;
  }

  .news-card__placeholder span {
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .news-card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  .news-card__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
  }

  .news-card__category {
    color: var(--reference-color, #666666);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.75rem;
  }

  .news-card__date {
    color: var(--date-color, #999999);
    font-weight: 400;
  }

  .news-card__meta::before {
    content: '';
    width: 4px;
    height: 4px;
    background: var(--reference-color, #666666);
    border-radius: 50%;
    margin: 0 0.25rem;
  }

  .news-card__meta .news-card__category + .news-card__date::before {
    display: none;
  }

  .news-card__headline {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--headline-color, #333333);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    letter-spacing: -0.01em;
    flex-grow: 1;
  }

  .news-card__link-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #666666;
    font-size: 0.875rem;
    font-weight: 500;
    margin-top: auto;
    transition: all 0.3s ease;
  }

  .news-card--clickable:hover .news-card__link-indicator {
    color: #333333;
    transform: translateX(4px);
  }

  .news-card__link-indicator svg {
    width: 1rem;
    height: 1rem;
    transition: transform 0.3s ease;
  }

  .news-card--clickable:hover .news-card__link-indicator svg {
    transform: translateX(2px);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .news-cards-section {
      padding: 0 1rem;
    }

    .news-cards-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .news-card__content {
      padding: 1.25rem;
    }

    .news-card__headline {
      font-size: 1rem;
    }
  }

  /* Mejoras de accesibilidad */
  .news-card--clickable:focus {
    outline: 2px solid #2E4695;
    outline-offset: 2px;
  }

  .news-card--clickable:focus:not(:focus-visible) {
    outline: none;
  }

  .news-card--clickable:focus-visible {
    outline: 2px solid #2E4695;
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .news-card,
    .news-card__image,
    .news-card__overlay,
    .news-card__icon,
    .news-card__link-indicator {
      transition: none;
    }
  }
{% endstylesheet %}

