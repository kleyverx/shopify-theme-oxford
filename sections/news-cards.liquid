{% comment %}
  Sección de noticias destacadas con tarjetas clickeables
  - Toda la tarjeta es clickeable
  - Se elimina el botón separado
  - Mejor experiencia de usuario
{% endcomment %}

<section
  class="news-cards-section{% if section.settings.animate_on_scroll %} section-appear{% endif %}"
  id="news-cards-{{ section.id }}"
  data-section-type="news-cards"
  style="--bg-color: {{ section.settings.bg_color | default: '#ffffff' }}; --title-color: {{ section.settings.title_color | default: '#333333' }}; --card-bg: {{ section.settings.card_bg_color | default: '#ffffff' }}; --headline-color: {{ section.settings.headline_color | default: '#333333' }}; --reference-color: {{ section.settings.reference_color | default: '#666666' }}; --date-color: {{ section.settings.date_color | default: '#999999' }}; padding-top: {{ section.settings.margin_top | default: 48 }}px; padding-bottom: {{ section.settings.margin_bottom | default: 32 }}px; width: 100vw; margin-left: calc(50% - 50vw); margin-right: calc(50% - 50vw);"
>
  <div class="news-cards-container">
    {% if section.settings.title != blank %}
      <h2 class="news-cards-title">{{ section.settings.title | escape }}</h2>
    {% endif %}

    <div class="news-cards-grid">
      {% for block in section.blocks limit: 4 %}
        {% if block.settings.link != blank %}
          <a
            href="{{ block.settings.link }}"
            class="news-card news-card--clickable"
            {{ block.shopify_attributes }}
            style="animation-delay: {{ forloop.index0 | times: 100 }}ms;"
            {% if block.settings.open_in_new_tab %}
              target="_blank" rel="noopener noreferrer"
            {% endif %}
          >
        {% else %}
          <article
            class="news-card"
            {{ block.shopify_attributes }}
            style="animation-delay: {{ forloop.index0 | times: 100 }}ms;"
          >
        {% endif %}

        <div class="news-card__image-wrapper">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 400, height: 400, crop: 'center' }}"
              alt="{{ block.settings.image_alt | default: block.settings.headline | escape }}"
              class="news-card__image"
              width="400"
              height="400"
              loading="lazy"
            >
          {% else %}
            <div class="news-card__placeholder">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
              <span>Imagen</span>
            </div>
          {% endif %}

          {% if block.settings.link != blank %}
            <div class="news-card__overlay">
              <div class="news-card__icon">
                {% if block.settings.open_in_new_tab %}
                  <svg
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/>
                    <polyline points="15,3 21,3 21,9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                {% else %}
                  <svg
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="m9 18 6-6-6-6"/>
                  </svg>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>

        <div class="news-card__content">
          <div class="news-card__meta">
            {% if block.settings.reference != blank %}
              <span class="news-card__category">{{ block.settings.reference | escape }}</span>
            {% endif %}
            {% if block.settings.date != blank %}
              <time class="news-card__date" datetime="{{ block.settings.date | escape }}">
                {{- block.settings.date | escape -}}
              </time>
            {% endif %}
          </div>

          {% if block.settings.headline != blank %}
            <h3 class="news-card__headline">{{ block.settings.headline | escape }}</h3>
          {% endif %}

          {% if block.settings.link != blank %}
            <div class="news-card__link-indicator">
              <span>{{ block.settings.link_text | default: 'Leer más' | escape }}</span>
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="m9 18 6-6-6-6"/>
              </svg>
            </div>
          {% endif %}
        </div>

        {% if block.settings.link != blank %}
          </a>
        {% else %}
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

