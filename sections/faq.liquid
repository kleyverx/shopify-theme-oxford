{% liquid
  assign section_id = section.id
  assign blocks_count = section.blocks.size
%}

<div class="faq-section" id="FaqSection-{{ section_id }}" style="
  --faq-section-padding-top: {{ section.settings.padding_top }}px;
  --faq-section-padding-bottom: {{ section.settings.padding_bottom }}px;
  --faq-title-color: {{ section.settings.title_color }};
  --faq-question-color: {{ section.settings.question_color }};
  --faq-answer-color: {{ section.settings.answer_color }};
  --faq-border-color: {{ section.settings.border_color }};
  --faq-accordion-bg: {{ section.settings.accordion_bg }};
">
  <div class="faq-container container">
    <div class="faq-wrapper">
      {% if section.settings.title != blank %}
        <h2 class="faq-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="faq-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      <div class="faq-content">
        <div class="faq-image-column">
          {% if section.settings.image != blank %}
            <div class="faq-image-wrapper">
              {{ section.settings.image | image_url: width: 600 | image_tag: 
                loading: 'lazy',
                class: 'faq-image',
                widths: '360, 480, 590, 720',
                sizes: '(min-width: 990px) 40vw, 100vw'
              }}
            </div>
          {% else %}
            <div class="faq-image-placeholder">
              {{ 'image' | placeholder_svg_tag: 'faq-placeholder-svg' }}
            </div>
          {% endif %}
        </div>

        <div class="faq-accordion-column">
          {% if blocks_count > 0 %}
            <div class="faq-accordion-list">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'question' %}
                    {% liquid
                      assign block_id = block.id
                      assign question = block.settings.question
                      assign answer = block.settings.answer
                    %}
                    <details class="faq-accordion-item" id="FaqItem-{{ block_id }}" {{ block.shopify_attributes }}>
                      <summary class="faq-question">
                        <h3>{{ question }}</h3>
                        <span class="faq-icon">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="plus-icon"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="minus-icon"><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        </span>
                      </summary>
                      <div class="faq-answer">
                        {{ answer }}
                      </div>
                    </details>
                {% endcase %}
              {% endfor %}
            </div>
          {% else %}
            <div class="faq-empty-message">Añade preguntas frecuentes desde el editor de temas.</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const detailsElements = document.querySelectorAll('#FaqSection-{{ section_id }} details');
    
    // Agregar funcionalidad de acordeón
    detailsElements.forEach(details => {
      details.addEventListener('toggle', function() {
        if (details.open) {
          // Cerrar todos los demás detalles
          detailsElements.forEach(otherDetails => {
            if (otherDetails !== details && otherDetails.open) {
              otherDetails.open = false;
            }
          });
        }
      });
    });
  });
</script>

{% stylesheet %}
  .faq-section {
    padding-top: var(--faq-section-padding-top);
    padding-bottom: var(--faq-section-padding-bottom);
    width: 100%;
  }

  .faq-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .faq-title {
    text-align: center;
    margin-bottom: 1rem;
    font-size: 2rem;
    font-weight: 700;
    color: var(--faq-title-color);
  }

  .faq-subtitle {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .faq-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media screen and (min-width: 990px) {
    .faq-content {
      flex-direction: row;
      align-items: flex-start;
    }

    .faq-image-column {
      width: 40%;
    }

    .faq-accordion-column {
      width: 60%;
    }
  }

  .faq-image-column {
    position: relative;
  }

  .faq-image-wrapper {
    border-radius: 8px;
    overflow: hidden;
    height: 100%;
  }

  .faq-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .faq-image-placeholder {
    background-color: #f7f7f7;
    border-radius: 8px;
    aspect-ratio: 4/5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .faq-placeholder-svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .faq-accordion-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-accordion-item {
    border: 1px solid var(--faq-border-color);
    border-radius: 6px;
    background-color: var(--faq-accordion-bg);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    cursor: pointer;
    list-style: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question h3 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--faq-question-color);
  }

  .faq-icon {
    display: flex;
    flex-shrink: 0;
    margin-left: 1rem;
    color: var(--faq-question-color);
  }

  .faq-icon .minus-icon {
    display: none;
  }

  details[open] .faq-icon .plus-icon {
    display: none;
  }

  details[open] .faq-icon .minus-icon {
    display: block;
  }

  .faq-answer {
    padding: 0 1.25rem 1.25rem;
    color: var(--faq-answer-color);
    line-height: 1.6;
  }

  .faq-empty-message {
    padding: 2rem;
    text-align: center;
    background-color: #f7f7f7;
    border-radius: 6px;
    color: #777;
  }
{% endstylesheet %}

