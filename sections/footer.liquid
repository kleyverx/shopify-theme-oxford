<footer class="footer" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="footer__container">
    <!-- Logo y descripción -->
    <div class="footer__brand">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 180 }}" alt="{{ shop.name }}" class="footer__logo" width="180" height="auto">
      {% else %}
        <h3 class="footer__brand-name">{{ shop.name }}</h3>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="footer__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <!-- Menús -->
    <div class="footer__menus">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            {% if block.settings.menu != blank %}
              <div class="footer__menu">
                <h4 class="footer__menu-title">{{ block.settings.title | default: block.settings.menu.title }}</h4>
                <ul class="footer__menu-links">
                  {% for link in block.settings.menu.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Redes sociales -->
