<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Force Spanish locale if not already using it %}
    {% if request.locale.iso_code != 'es' %}
      <script>
        // Only redirect if we're not already on the Spanish version and we're not in the theme editor
        if (!window.Shopify || !window.Shopify.designMode) {
          var currentUrl = window.location.href;
          var currentPath = window.location.pathname;
          // Check if the URL already has a locale parameter and avoid infinite redirects
          if (currentUrl.indexOf('/es/') === -1 && currentPath !== '/es' && !currentPath.startsWith('/es/')) {
            // Redirect to Spanish version only once
            var newPath = '/es' + currentPath;
            if (newPath !== currentPath) {
              window.location.href = currentUrl.replace(currentPath, newPath);
            }
          }
        }
      </script>
    {% endif %}
    
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Mini Cart CSS %}
    {{ 'mini-cart.css' | asset_url | stylesheet_tag }}
    
    {% # Cart Page CSS %}
    {% if template.name == 'cart' %}
      {{ 'cart-page.css' | asset_url | stylesheet_tag }}
    {% endif %}
    


    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {% comment %} Initialize Shopify currency for JavaScript components {% endcomment %}
    <script>
      window.Shopify = window.Shopify || {};
      window.Shopify.currency = window.Shopify.currency || {};
      window.Shopify.currency.active = '{{ shop.currency }}';
      window.Shopify.shop = window.Shopify.shop || {};
      window.Shopify.shop.currency = '{{ shop.currency }}';
      window.Shopify.money_format = '{{ shop.money_format }}';
      window.theme = window.theme || {};
      window.theme.moneyFormat = '{{ shop.money_format }}';
    </script>

    {% if settings.favicon_image != blank %}
      <link rel="icon" type="image/png" href="{{ settings.favicon_image | image_url: width: 64, height: 64 }}">
    {% endif %}
  </head>

  <body class="template-{{ template.name }}{% if template.name == 'index' %} template-index{% endif %}">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% if template.name == 'index' %}
      {% render 'section-scroll-nav' %}
    {% endif %}
    
    {% render 'social-floating-nav' %}

    {% sections 'footer-group' %}
    
    {% # Mini Cart JavaScript %}
    <script src="{{ 'mini-cart.js' | asset_url }}" defer></script>
    
    {% # Cart Page JavaScript %}
    {% if template.name == 'cart' %}
      <script src="{{ 'cart-page.js' | asset_url }}" defer></script>
    {% endif %}

  </body>
</html>

