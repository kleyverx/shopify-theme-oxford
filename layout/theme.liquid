<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Force Spanish locale if not already using it %}
    {% if request.locale.iso_code != 'es' %}
      <script>
        // Only redirect if we're not already on the Spanish version and we're not in the theme editor
        if (!window.Shopify || !window.Shopify.designMode) {
          var currentUrl = window.location.href;
          var currentPath = window.location.pathname;
          // Check if the URL already has a locale parameter and avoid infinite redirects
          if (currentUrl.indexOf('/es/') === -1 && currentPath !== '/es' && !currentPath.startsWith('/es/')) {
            // Redirect to Spanish version only once
            var newPath = '/es' + currentPath;
            if (newPath !== currentPath) {
              window.location.href = currentUrl.replace(currentPath, newPath);
            }
          }
        }
      </script>
    {% endif %}
    
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Add to Cart Block CSS %}
    {{ 'add-to-cart-block.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {% if settings.favicon_image != blank %}
      <link rel="icon" type="image/png" href="{{ settings.favicon_image | image_url: width: 64, height: 64 }}">
    {% endif %}
  </head>

  <body class="template-{{ template.name }}{% if template.name == 'index' %} template-index{% endif %}">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% if template.name == 'index' %}
      {% render 'section-scroll-nav' %}
    {% endif %}
    
    {% render 'social-floating-nav' %}

    {% sections 'footer-group' %}
    
    <!-- Mini Cart Dropdown (rendered at body level to avoid stacking context issues) -->
    <div id="mini-cart-dropdown-portal"></div>
    
    {% # Add to Cart Block JavaScript %}
    {{ 'add-to-cart-block.js' | asset_url | script_tag }}
  </body>
</html>

