    "settings": [
      {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button background color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text color",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "button_border_radius",
        "min": 0,
        "max": 16,
        "step": 1,
        "unit": "px",
        "label": "Button border radius (px)",
        "default": 4
      }
    ]
  },
  {
    "name": "Images",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "favicon_image",
        "label": "Favicon image"
      }
    ]
  },
  {
    "name": "Spacing",
    "settings": [
      {
        "type": "range",
        "id": "section_vertical_spacing",
        "min": 0,
        "max": 120,
        "step": 4,
        "unit": "px",
        "label": "Section vertical spacing (px)",
        "default": 40
      }
    ]
  }
