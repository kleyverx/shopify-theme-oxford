[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "assistant_n4",
        "label": "Primary"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "Page width",
        "options": [
          {
            "value": "90rem",
            "label": "Narrow"
          },
          {
            "value": "110rem",
            "label": "Wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Page margin",
        "default": 20
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "Foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "Input corner radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Navegación de Secciones",
    "settings": [
      {
        "type": "header",
        "content": "Configuración de la navegación flotante"
      },
      {
        "type": "checkbox",
        "id": "section_nav_enable",
        "label": "Habilitar navegación de secciones",
        "default": true,
        "info": "Muestra una navegación flotante en el lado derecho en desktop"
      },
      {
        "type": "select",
        "id": "section_nav_position",
        "label": "Posición de la navegación",
        "options": [
          {
            "value": "right",
            "label": "Derecha"
          },
          {
            "value": "left",
            "label": "Izquierda"
          }
        ],
        "default": "right"
      },
      {
        "type": "range",
        "id": "section_nav_offset",
        "min": 1,
        "max": 5,
        "step": 0.5,
        "unit": "rem",
        "label": "Distancia del borde",
        "default": 2
      },
      {
        "type": "range",
        "id": "section_nav_scroll_trigger",
        "min": 100,
        "max": 800,
        "step": 50,
        "unit": "px",
        "label": "Aparecer después de scroll",
        "default": 300,
        "info": "Después de cuántos píxeles de scroll aparece la navegación"
      },
      {
        "type": "header",
        "content": "Colores y estilo"
      },
      {
        "type": "color",
        "id": "section_nav_bg_color",
        "label": "Color de fondo",
        "default": "#FFFFFF",
        "info": "Color de fondo de la navegación"
      },
      {
        "type": "range",
        "id": "section_nav_bg_opacity",
        "min": 0.1,
        "max": 1,
        "step": 0.1,
        "label": "Opacidad del fondo",
        "default": 0.9
      },
      {
        "type": "color",
        "id": "section_nav_text_color",
        "label": "Color del texto",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "section_nav_active_bg",
        "label": "Color de fondo activo",
        "default": "#667eea"
      },
      {
        "type": "color",
        "id": "section_nav_active_text",
        "label": "Color de texto activo",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "section_nav_border_radius",
        "min": 0,
        "max": 3,
        "step": 0.5,
        "unit": "rem",
        "label": "Redondez de bordes",
        "default": 2
      },
      {
        "type": "range",
        "id": "section_nav_blur",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Efecto de difuminado",
        "default": 10,
        "info": "Efecto backdrop-filter blur"
      },
      {
        "type": "header",
        "content": "Comportamiento"
      },
      {
        "type": "checkbox",
        "id": "section_nav_auto_hide",
        "label": "Ocultar automáticamente",
        "default": false,
        "info": "Oculta la navegación después de unos segundos sin interacción"
      },
      {
        "type": "range",
        "id": "section_nav_hide_delay",
        "min": 2,
        "max": 10,
        "step": 1,
        "unit": "s",
        "label": "Tiempo antes de ocultar",
        "default": 5,
        "info": "Solo si 'Ocultar automáticamente' está habilitado"
      }
    ]
  },
  {
    "name": "Redes sociales flotantes",
    "settings": [
      {
        "type": "header",
        "content": "Configuración general"
      },
      {
        "type": "checkbox",
        "id": "social_nav_enable",
        "label": "Habilitar barra de redes sociales",
        "default": false,
        "info": "Muestra una barra flotante de redes sociales en el lado izquierdo en desktop"
      },
      {
        "type": "range",
        "id": "social_nav_offset",
        "min": 1,
        "max": 5,
        "step": 0.5,
        "unit": "rem",
        "label": "Distancia del borde",
        "default": 2,
        "info": "Distancia desde el borde izquierdo"
      },
      {
        "type": "range",
        "id": "social_nav_scroll_trigger",
        "min": 100,
        "max": 1000,
        "step": 50,
        "unit": "px",
        "label": "Activar al hacer scroll",
        "default": 300,
        "info": "Píxeles de scroll necesarios para mostrar la barra"
      },
      {
        "type": "header",
        "content": "Apariencia"
      },
      {
        "type": "color",
        "id": "social_nav_bg_color",
        "label": "Color de fondo",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "social_nav_bg_opacity",
        "min": 0.1,
        "max": 1,
        "step": 0.1,
        "label": "Opacidad del fondo",
        "default": 0.9
      },
      {
        "type": "color",
        "id": "social_nav_icon_color",
        "label": "Color de los íconos",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "social_nav_hover_bg",
        "label": "Color de fondo al pasar el mouse",
        "default": "#667eea"
      },
      {
        "type": "color",
        "id": "social_nav_hover_icon",
        "label": "Color de ícono al pasar el mouse",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "social_nav_border_radius",
        "min": 0.5,
        "max": 3,
        "step": 0.5,
        "unit": "rem",
        "label": "Radio de borde",
        "default": 2
      },
      {
        "type": "range",
        "id": "social_nav_blur",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Desenfoque del fondo",
        "default": 10
      },
      {
        "type": "header",
        "content": "Enlaces de redes sociales"
      },
      {
        "type": "url",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "social_twitter_url",
        "label": "Twitter/X URL"
      },
      {
        "type": "url",
        "id": "social_linkedin_url",
        "label": "LinkedIn URL"
      },
      {
        "type": "url",
        "id": "social_youtube_url",
        "label": "YouTube URL"
      },
      {
        "type": "url",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      },
      {
        "type": "url",
        "id": "social_whatsapp_url",
        "label": "WhatsApp URL",
        "info": "Ejemplo: https://wa.me/1234567890"
      },
      {
        "type": "checkbox",
        "id": "social_nav_auto_hide",
        "label": "Ocultar automáticamente",
        "default": false,
        "info": "Oculta la barra después de unos segundos sin interacción"
      },
      {
        "type": "range",
        "id": "social_nav_hide_delay",
        "min": 2,
        "max": 10,
        "step": 1,
        "unit": "s",
        "label": "Tiempo antes de ocultar",
        "default": 5,
        "info": "Solo si 'Ocultar automáticamente' está habilitado"
      }
    ]
  },
  {
    "name": "Mini Carrito",
    "settings": [
      {
        "type": "header",
        "content": "Configuración general"
      },
      {
        "type": "checkbox",
        "id": "mini_cart_enable",
        "label": "Habilitar mini carrito",
        "default": true,
        "info": "Muestra el mini carrito al hacer clic en el ícono del carrito"
      },
      {
        "type": "checkbox",
        "id": "mini_cart_auto_open",
        "label": "Abrir automáticamente al agregar producto",
        "default": true,
        "info": "El mini carrito se abre automáticamente cuando se agrega un producto"
      },
      {
        "type": "range",
        "id": "mini_cart_auto_close_delay",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "s",
        "label": "Cerrar automáticamente después de",
        "default": 0,
        "info": "0 = no cerrar automáticamente"
      },
      {
        "type": "header",
        "content": "Apariencia"
      },
      {
        "type": "select",
        "id": "mini_cart_position",
        "label": "Posición del mini carrito",
        "options": [
          {
            "value": "right",
            "label": "Derecha"
          },
          {
            "value": "left",
            "label": "Izquierda"
          }
        ],
        "default": "right"
      },
      {
        "type": "range",
        "id": "mini_cart_width",
        "min": 300,
        "max": 500,
        "step": 10,
        "unit": "px",
        "label": "Ancho del mini carrito",
        "default": 400
      },
      {
        "type": "color",
        "id": "mini_cart_bg_color",
        "label": "Color de fondo",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "mini_cart_text_color",
        "label": "Color del texto",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "mini_cart_border_color",
        "label": "Color del borde",
        "default": "#E5E5E5"
      },
      {
        "type": "range",
        "id": "mini_cart_border_radius",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Radio de borde",
        "default": 8
      },
      {
        "type": "header",
        "content": "Botones y acciones"
      },
      {
        "type": "color",
        "id": "mini_cart_button_bg",
        "label": "Color de fondo del botón principal",
        "default": "#667eea"
      },
      {
        "type": "color",
        "id": "mini_cart_button_text",
        "label": "Color del texto del botón principal",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "mini_cart_secondary_button_bg",
        "label": "Color de fondo del botón secundario",
        "default": "#F8F9FA"
      },
      {
        "type": "color",
        "id": "mini_cart_secondary_button_text",
        "label": "Color del texto del botón secundario",
        "default": "#666666"
      },
      {
        "type": "header",
        "content": "Textos personalizables"
      },
      {
        "type": "text",
        "id": "mini_cart_empty_title",
        "label": "Título cuando está vacío",
        "default": "Tu carrito está vacío"
      },
      {
        "type": "textarea",
        "id": "mini_cart_empty_message",
        "label": "Mensaje cuando está vacío",
        "default": "Parece que aún no has agregado nada a tu carrito. Comienza a explorar nuestros productos."
      },
      {
        "type": "text",
        "id": "mini_cart_checkout_button_text",
        "label": "Texto del botón de checkout",
        "default": "Finalizar compra"
      },
      {
        "type": "text",
        "id": "mini_cart_view_cart_text",
        "label": "Texto del botón ver carrito",
        "default": "Ver carrito completo"
      },
      {
        "type": "header",
        "content": "Funcionalidades avanzadas"
      },
      {
        "type": "checkbox",
        "id": "mini_cart_show_shipping_notice",
        "label": "Mostrar aviso de envío gratis",
        "default": true
      },
      {
        "type": "number",
        "id": "mini_cart_free_shipping_threshold",
        "label": "Umbral para envío gratis (en centavos)",
        "default": 5000,
        "info": "Ejemplo: 5000 = €50.00"
      },
      {
        "type": "text",
        "id": "mini_cart_shipping_notice_text",
        "label": "Texto del aviso de envío",
        "default": "Envío gratis en pedidos superiores a €50"
      },
      {
        "type": "checkbox",
        "id": "mini_cart_show_recommendations",
        "label": "Mostrar productos recomendados",
        "default": false,
        "info": "Muestra productos relacionados cuando el carrito está vacío"
      },
      {
        "type": "range",
        "id": "mini_cart_animation_speed",
        "min": 100,
        "max": 500,
        "step": 50,
        "unit": "ms",
        "label": "Velocidad de animación",
        "default": 300
      }
    ]
  },
  {
