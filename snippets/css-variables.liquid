{% style %}
  {% # Loads all font variantions with display: swap %}
  {% if settings.type_primary_font %}
    {{ settings.type_primary_font | font_face: font_display: 'swap' }}
    {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
    {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
    {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {% endif %}

  :root {
    {% if settings.type_primary_font %}
      --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
      --font-primary--style: {{ settings.type_primary_font.style }};
      --font-primary--weight: {{ settings.type_primary_font.weight }};
    {% else %}
      --font-primary--family: Arial, sans-serif;
      --font-primary--style: normal;
      --font-primary--weight: 400;
    {% endif %}
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    /* Variables CSS para Carrito */
    --cart-bg-color: {{ settings.cart_background_color | default: '#FFFFFF' }};
    --cart-text-color: {{ settings.cart_text_color | default: '#333333' }};
    --cart-border-color: {{ settings.cart_border_color | default: '#e5e5e5' }};
    --cart-button-bg-color: {{ settings.cart_button_bg_color | default: '#007bff' }};
    --cart-button-text-color: {{ settings.cart_button_text_color | default: '#FFFFFF' }};
    
    /* Variables CSS para Mini-Carrito */
    --mini-cart-bg-color: {{ settings.mini_cart_bg_color | default: '#FFFFFF' }};
    --mini-cart-text-color: {{ settings.mini_cart_text_color | default: '#333333' }};
    --mini-cart-border-color: {{ settings.mini_cart_border_color | default: '#e0e0e0' }};
    --mini-cart-accent-color: {{ settings.mini_cart_accent_color | default: '#007bff' }};
    --mini-cart-count-bg-color: {{ settings.mini_cart_count_bg_color | default: '#dc3545' }};
    --mini-cart-count-text-color: {{ settings.mini_cart_count_text_color | default: '#FFFFFF' }};
    
    /* Variables CSS para Header del Mini-Carrito */
    --mini-cart-close-icon-color: {{ settings.mini_cart_close_icon_color | default: '#666666' }};
    --mini-cart-close-hover-bg: {{ settings.mini_cart_close_hover_bg | default: 'rgba(0, 0, 0, 0.05)' }};
    
    /* Variables CSS para Botones de Cantidad del Mini-Carrito */
    --mini-cart-label-color: {{ settings.mini_cart_label_color | default: '#666666' }};
    --mini-cart-qty-btn-color: {{ settings.mini_cart_qty_btn_color | default: '#333333' }};
    --mini-cart-qty-btn-border: {{ settings.mini_cart_qty_btn_border | default: '#dddddd' }};
    --mini-cart-qty-btn-bg: {{ settings.mini_cart_qty_btn_bg | default: '#ffffff' }};
    --mini-cart-qty-btn-hover-bg: {{ settings.mini_cart_qty_btn_hover_bg | default: 'rgba(0, 123, 255, 0.1)' }};
    --mini-cart-qty-btn-disabled-color: {{ settings.mini_cart_qty_btn_disabled_color | default: '#999999' }};
    --mini-cart-qty-btn-disabled-bg: {{ settings.mini_cart_qty_btn_disabled_bg | default: '#f8f8f8' }};
  }
{% endstyle %}
