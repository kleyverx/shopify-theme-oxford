{% stylesheet %}
  .social-nav {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    left: var(--social-offset);
    z-index: 100;
    background: color-mix(in srgb, var(--social-bg-color) calc(var(--social-bg-opacity) * 100%), transparent);
    backdrop-filter: blur(var(--social-blur));
    border-radius: var(--social-border-radius);
    padding: 1rem 0.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .social-nav.visible {
    opacity: 1;
    visibility: visible;
  }
  
  .social-nav__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .social-nav__item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: var(--social-icon-color);
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    background: transparent;
    transform: translateX(0);
  }
  
  .social-nav__item:hover {
    background: var(--social-hover-bg);
    color: var(--social-hover-icon);
    transform: translateX(5px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  
  .social-nav__item svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  /* Ocultar completamente en mobile y tablet */
  @media (max-width: 768px) {
    .social-nav {
      display: none !important;
    }
  }
{% endstylesheet %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const socialNav = document.querySelector('.social-nav');
  if (!socialNav) return;
  
  const scrollTrigger = parseInt(getComputedStyle(socialNav).getPropertyValue('--social-scroll-trigger')) || 300;
  const autoHide = socialNav.style.getPropertyValue('--social-auto-hide') === 'true';
  const hideDelay = parseInt(getComputedStyle(socialNav).getPropertyValue('--social-hide-delay')) * 1000 || 5000;
  
  let hideTimeout;
  
  // Mostrar/ocultar basado en scroll
  function checkScroll() {
    if (window.scrollY > scrollTrigger) {
      socialNav.classList.add('visible');
      if (autoHide) {
        clearTimeout(hideTimeout);
        hideTimeout = setTimeout(() => {
          if (!socialNav.matches(':hover')) {
            socialNav.classList.remove('visible');
          }
        }, hideDelay);
      }
    } else {
      socialNav.classList.remove('visible');
    }
  }
  
  // Mostrar al hacer hover cerca del borde
  function handleMouseMove(e) {
    if (window.scrollY > scrollTrigger && e.clientX < 50) {
      socialNav.classList.add('visible');
      if (autoHide) {
        clearTimeout(hideTimeout);
      }
    } else if (autoHide && !socialNav.matches(':hover') && e.clientX > 100) {
      clearTimeout(hideTimeout);
      hideTimeout = setTimeout(() => {
        socialNav.classList.remove('visible');
      }, hideDelay);
    }
  }
  
  // Gestionar eventos al hacer hover
  socialNav.addEventListener('mouseenter', () => {
    clearTimeout(hideTimeout);
  });
  
  socialNav.addEventListener('mouseleave', () => {
    if (autoHide) {
      clearTimeout(hideTimeout);
      hideTimeout = setTimeout(() => {
        socialNav.classList.remove('visible');
      }, hideDelay);
    }
  });
  
  window.addEventListener('scroll', checkScroll);
  document.addEventListener('mousemove', handleMouseMove);
  
  // Comprobaci√≥n inicial
  checkScroll();
});
</script>
