        const buttons = this.wrapper.querySelectorAll('button, .btn');
        buttons.forEach(btn => {
          const wasDisabled = btn.getAttribute('data-was-disabled') === 'true';
          if (!wasDisabled) {
            btn.disabled = false;
          }
          btn.removeAttribute('data-was-disabled');
        });
      }
